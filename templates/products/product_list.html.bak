{% extends 'base.html' %}

{% block title %}Gestion des produits - RedPOS{% endblock %}

{% block extra_css %}
<style>
    .stats-card {
        border-left: 4px solid var(--primary-red);
        transition: transform 0.2s;
    }

    .stats-card:hover {
        transform: translateY(-2px);
    }

    .badge-stock-ok {
        background-color: #10B981;
    }

    .badge-stock-low {
        background-color: #F59E0B;
    }

    .badge-stock-out {
        background-color: #EF4444;
    }

    .product-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 5px;
    }

    .table-actions .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- En-tête -->
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-box"></i> Gestion des produits</h2>
            <p class="text-muted">Gérez votre catalogue de produits</p>
        </div>
        <div class="col-auto">
            <a href="{% url 'products:product_create' %}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau produit
            </a>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total produits</h6>
                            <h3 class="mb-0">{{ total_products }}</h3>
                        </div>
                        <i class="bi bi-box text-primary" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Produits actifs</h6>
                            <h3 class="mb-0 text-success">{{ active_products }}</h3>
                        </div>
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm stats-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Stock faible</h6>
                            <h3 class="mb-0 text-warning">{{ low_stock_count }}</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres et recherche -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Recherche</label>
                    <input type="text" name="search" class="form-control" placeholder="Nom, SKU, catégorie..."
                        value="{{ search }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Catégorie</label>
                    <select name="category" class="form-select">
                        <option value="">Toutes les catégories</option>
                        {% for cat in categories %}
                        <option value="{{ cat.id }}" {% if selected_category==cat.id|stringformat:"s" %}selected{% endif
                            %}>
                            {{ cat.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Statut</label>
                    <select name="status" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="active" {% if selected_status=='active' %}selected{% endif %}>Actifs</option>
                        <option value="inactive" {% if selected_status=='inactive' %}selected{% endif %}>Inactifs
                        </option>
                        <option value="low_stock" {% if selected_status=='low_stock' %}selected{% endif %}>Stock faible
                        </option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table des produits -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>SKU</th>
                            <th>Nom</th>
                            <th>Catégorie</th>
                            <th>Prix achat</th>
                            <th>Prix vente</th>
                            <th>Marge</th>
                            <th>Stock</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                        <tr>
                            <td>
                                {% if product.image %}
                                <img src="{{ product.image.url }}" alt="{{ product.name }}" class="product-image">
                                {% else %}
                                <div class="product-image bg-light d-flex align-items-center justify-content-center">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                                {% endif %}
                            </td>
                            <td><code>{{ product.sku }}</code></td>
                            <td><strong>{{ product.name }}</strong></td>
                            <td>
                                {% if product.category %}
                                <span class="badge bg-secondary">{{ product.category.name }}</span>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>{{ product.purchase_price }}€</td>
                            <td><strong>{{ product.selling_price }}€</strong></td>
                            <td>
                                <span class="badge bg-info">{{ product.profit_margin|floatformat:1 }}%</span>
                            </td>
                            <td>
                                {% if product.current_stock == 0 %}
                                <span class="badge badge-stock-out">Rupture ({{ product.current_stock }})</span>
                                {% elif product.is_low_stock %}
                                <span class="badge badge-stock-low">Faible ({{ product.current_stock }})</span>
                                {% else %}
                                <span class="badge badge-stock-ok">OK ({{ product.current_stock }})</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if product.is_active %}
                                <span class="badge bg-success">Actif</span>
                                {% else %}
                                <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="table-actions">
                                <div class="btn-group btn-group-sm">
                                    <a href="{% url 'products:product_update' product.pk %}"
                                        class="btn btn-outline-primary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="{% url 'products:product_toggle' product.pk %}"
                                        class="btn btn-outline-secondary"
                                        title="{% if product.is_active %}Désactiver{% else %}Activer{% endif %}">
                                        <i class="bi bi-{% if product.is_active %}pause{% else %}play{% endif %}"></i>
                                    </a>
                                    <a href="{% url 'products:product_delete' product.pk %}"
                                        class="btn btn-outline-danger" title="Supprimer"
                                        onclick="return confirm('Voulez-vous vraiment désactiver ce produit ?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% empty %}
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">
                                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                <p class="mt-2">Aucun produit trouvé</p>
                                <a href="{% url 'products:product_create' %}" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Créer le premier produit
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if is_paginated %}
            <nav aria-label="Navigation des pages">
                <ul class="pagination justify-content-center">
                    {% if page_obj.has_previous %}
                    <li class="page-item">
                        <a class="page-link" href="?page=1">Première</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page={{ page_obj.previous_page_number }}">Précédent</a>
                    </li>
                    {% endif %}

                    <li class="page-item active">
                        <span class="page-link">Page {{ page_obj.number }} sur {{ page_obj.paginator.num_pages }}</span>
                    </li>

                    {% if page_obj.has_next %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ page_obj.next_page_number }}">Suivant</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page={{ page_obj.paginator.num_pages }}">Dernière</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}