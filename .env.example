# Django Secret Key (générer avec: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
SECRET_KEY=your-secret-key-here

# Debug Mode (False en production)
DEBUG=False

# Allowed Hosts (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app

# Database URL (fourni automatiquement par Railway)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# CSRF Trusted Origins (ajouter votre domaine Railway)
CSRF_TRUSTED_ORIGINS=https://*.railway.app
